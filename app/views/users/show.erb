<div class="container">
<% if current_user == nil %>
	<h4> Please <a href="/sessions/new">login</a> or <a href="/users/new">sign up</h4></a>
<% else %>

<h3><strong><%=@user.username %>'s item(s):</strong></h3>
<div class="user-items-list">
<ul>
	<p><% @items.each do |item| %></p>
		<p>Product: <%= item.title %></p>
        <% if item.user_id == current_user.id %> 
		  <form id="<%= item.id%>" action="/items/<%= item.id%>" method="POST">	
		  <input type="hidden" name="_method" value="delete">
		  <input type="submit" value="Delete this item">
		  </form></li>	
		  </li>
		  <div class="<%= item.id%>">
		  <a id="edit-link" href="/items/<%= item.id %>/edit">Edit this item</a>
		  </div>
		  <hr>
	    <% end %>
	  <% end %>
	  

	<div class="add-link">
		<p><a id="add-item-link" href="/items/new">Add a new item</a></p>
	</div>
</ul>
</div>

<div class="active-bids">
	<p>Your active bid(s):</p>
	<ol>
		<% @bids.each do|bid| %>
		<li><p><%= bid.item.title %>
		$<%= bid.bid_price %></p></li>
	    <% end %>
	</ol> 
</div>

<div class="winning-bids">
	<p>Item(s) you have won:</p>
	<ol>
	<% @winning_bids.each do |bid| %>
		<li><p><%= bid.item.title %>
		$<%= bid.bid_price %></p></li>
	<% end %>
	</ol>
</div>

<div class="all-items">
	<p><h3>All Items:</h3></p>
<ol>
	<% @all_items.each do|item| %>
		<li><a href="/items/<%= item.id %>"><p><%= item.title %></p></a></li>
	<% end %>
</ol>
<div>

<% end %>
</div>